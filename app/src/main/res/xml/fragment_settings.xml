<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Costimize">
        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_fullscreen"
            android:key="full_screen"
            android:showText="true"
            android:summaryOff="Full screen is not set!"
            android:summaryOn="Full screen is set!"
            android:switchTextOff="Off"
            android:switchTextOn="On"
            android:title="Full Screen" />
        <ListPreference
            android:defaultValue="light"
            android:entries="@array/themes_tittle"
            android:entryValues="@array/themes_value"
            android:icon="@drawable/ic_theme"
            android:key="themes"
            android:title="Themes" />
    </PreferenceCategory>
</PreferenceScreen>